<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="800dp"
		android:layout_height="match_parent"
		android:gravity="center_horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Usuario"
			android:textColor="#000000"
			android:layout_marginTop="99dp"
			android:textSize="32sp"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="100dp"
			android:layout_marginRight="100dp"
			android:background="@drawable/carddentro"
			android:gravity="center"
			android:padding="10dp">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Codigo del Usuario: "/>

					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:id="@+id/cu"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Nombre: "/>

					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:id="@+id/un"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Apellidos: "/>

					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:id="@+id/ua"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Telefono: "/>

					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:id="@+id/tl"
						android:inputType="number"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Tipo de Usuario: "/>

					<Spinner
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="27sp"
						android:id="@+id/tu"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:gravity="center_vertical">

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dp"
			android:gravity="center_vertical">

			<EditText
				android:id="@+id/et_mostrar_fecha_picker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="date"
				android:clickable="false"
				android:cursorVisible="false"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:editable="false"
				android:hint="fecha"/>

			<ImageButton
				android:id="@+id/ib_obtener_fecha"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/ic_event_white_24dp"
				android:background="#0092D7"/>

		</LinearLayout>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Realizar Prestamo"
			android:textColor="#FFFFFF"
			android:background="@drawable/boton"
			android:padding="18dp"
			android:onClick="onlic"
			android:layout_marginTop="60dp"
			android:layout_marginBottom="20dp"
			android:textSize="18sp"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Libros Seleccionados"
			android:textColor="#000000"
			android:textSize="32sp"
			android:layout_marginTop="125dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="100dp"
			android:layout_marginRight="100dp"
			android:textSize="23sp"
			android:id="@+id/Libross"
			android:padding="10dp"
			android:background="@drawable/carddentro"
			android:textColor="#000000"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:background="@drawable/boton"
			android:textColor="#FFFFFF"
			android:padding="18dp"
			android:text="Seleccionar Libros"
			android:onClick="onclic"
			android:layout_marginTop="55dp"/>

	</LinearLayout>

</LinearLayout>

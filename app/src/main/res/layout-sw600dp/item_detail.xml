<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_margin="20dp"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="34dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Codigo del Prestamo: "
				android:textSize="36sp"
				android:textColor="#000000"/>

			<TextView
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/item_detail"
				android:textSize="36sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				tools:context=".ItemDetailFragment"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="80dp"
			android:gravity="center">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:textColor="#000000"
					android:textSize="32sp"
					android:layout_height="wrap_content"
					android:text="Libro Prestado"/>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:id="@+id/dialogg"
					android:background="@drawable/carddentro"
					android:layout_marginTop="10dp">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Titulo del Libro: "
							android:layout_gravity="center_horizontal"/>

						<TextView
							android:layout_width="200dp"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:layout_gravity="center_horizontal"
							android:id="@+id/ltl"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Codigo del Libro: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/cdl"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Valor del Libro: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/vl"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Coleccion del Libro: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/clcl"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="39dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="32sp"
					android:text="Usuario"/>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:background="@drawable/carddentro"
					android:layout_marginTop="10dp">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Codigo del Usuario: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/cu"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Nombre: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/un"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Apellidos: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/ua"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Tipo de Usuario: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/tu"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="225dp"
			android:layout_marginBottom="10dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="23sp"
					android:textColor="#000000"
					android:text="Fecha del Prestamo : "/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="23sp"
					android:textColor="#000000"
					android:id="@+id/fap"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="34dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Codigo del Prestamo: "
				android:textSize="36sp"
				android:textColor="#000000"/>

			<TextView
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/item_detail"
				android:textSize="36sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				tools:context=".ItemDetailFragment"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="80dp"
			android:gravity="center">

			<LinearLayout
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:textColor="#000000"
					android:textSize="32sp"
					android:layout_height="wrap_content"
					android:id="@+id/ll"
					android:text="Libro Prestado"/>

			</LinearLayout>

			<android.support.v7.widget.RecyclerView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_marginTop="10dp"
				android:id="@+id/item_list"
				android:layout_width="match_parent"
				android:layout_height="190dp"
				app:layoutManager="LinearLayoutManager"
				android:layoutAnimation="@anim/layout_animation_from_right"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="39dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="32sp"
					android:text="Usuario"/>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="18dp"
					android:background="@drawable/carddentro"
					android:layout_marginTop="10dp">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Codigo del Usuario: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/cu"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Nombre: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/un"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Apellidos: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/ua"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Tipo de Usuario: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/tu"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dp"
			android:gravity="center_vertical">

			<EditText
				android:id="@+id/et_mostrar_fecha_picker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="date"
				android:clickable="false"
				android:cursorVisible="false"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:editable="false"
				android:hint="fecha"/>

			<ImageButton
				android:id="@+id/ib_obtener_fecha"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/ic_event_white_24dp"
				android:background="#0092D7"/>

		</LinearLayout>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/boton"
			android:text="Realizar Devolucion"
			android:layout_marginTop="45dp"
			android:padding="16dp"
			android:textColor="#FFFFFF"
			android:layout_marginBottom="25dp"
			android:id="@+id/dd"/>

	</LinearLayout>

</ScrollView>


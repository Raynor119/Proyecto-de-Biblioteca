<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="8dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginLeft="200dp">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="74dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Codigo del Prestamo: "
				android:textSize="38sp"
				android:textColor="#000000"/>

			<TextView
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/item_detail"
				android:textSize="36sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				tools:context=".ItemDetailFragment"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="100dp"
			android:gravity="center_vertical"
			android:layout_gravity="center_horizontal">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="420dp"
				android:layout_height="wrap_content"
				android:layout_marginRight="250dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="32sp"
					android:id="@+id/ll"
					android:text="Libro Prestado"/>

				<android.support.v7.widget.RecyclerView
					xmlns:app="http://schemas.android.com/apk/res-auto"
					xmlns:tools="http://schemas.android.com/tools"
					android:layout_marginTop="10dp"
					android:id="@+id/item_list"
					android:layout_width="match_parent"
					android:layout_height="190dp"
					app:layoutManager="LinearLayoutManager"
					android:layoutAnimation="@anim/layout_animation_from_right"
					android:background="@drawable/carddentro"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="match_parent">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="32sp"
					android:text="Usuario"/>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="25dp"
					android:background="@drawable/carddentro"
					android:layout_marginTop="10dp">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Codigo del Usuario: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/cu"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Nombre: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/un"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Apellidos: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/ua"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#03A9F4"
							android:text="Tipo de Usuario: "/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="23sp"
							android:textColor="#000000"
							android:id="@+id/tu"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="225dp"
			android:layout_gravity="center_horizontal">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="32sp"
					android:textColor="#000000"
					android:text="Fecha del Prestamo : "/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="26sp"
					android:textColor="#000000"
					android:text="Text"
					android:id="@+id/fap"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Codigo de la Multa: "
			android:textSize="29sp"
			android:textColor="#000000"/>

		<TextView
			xmlns:tools="http://schemas.android.com/tools"
			android:id="@+id/item_detail2"
			android:textSize="29sp"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="true"
			tools:context=".ItemDetailFragment"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_marginTop="25dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:textColor="#000000"
			android:textSize="32sp"
			android:layout_height="wrap_content"
			android:text="Libro Prestado"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/carddentro"
			android:id="@+id/dialogg"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Titulo del Libro: "
						android:layout_gravity="center_horizontal"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:layout_gravity="center_horizontal"
						android:id="@+id/ltl"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Codigo del Libro: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/cdl"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Valor del Libro: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/vl"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Coleccion del Libro: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/clcl"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:textColor="#000000"
			android:textSize="32sp"
			android:layout_height="wrap_content"
			android:text="Usuario"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/carddentro"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:layout_marginLeft="20dp">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Codigo del Usuario: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/cu"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Nombre: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/un"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Apellidos: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/ua"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Tipo de Usuario: "/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:textColor="#000000"
						android:text="Text"
						android:id="@+id/tu"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Codigo del Prestamo: "
				android:textSize="29sp"
				android:textColor="#000000"/>

			<TextView
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/pre"
				android:textSize="29sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				tools:context=".ItemDetailFragment"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="20dp"
			android:background="@drawable/carddentro"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:layout_width="120dp"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:textColor="#000000"
					android:text="Fecha del Prestamo: "/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="23sp"
					android:textColor="#000000"
					android:id="@+id/fap"
					android:layout_gravity="bottom"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Codigo de la Devolucion: "
				android:textSize="29sp"
				android:textColor="#000000"/>

			<TextView
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/dev"
				android:textSize="29sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				tools:context=".ItemDetailFragment"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="20dp"
			android:background="@drawable/carddentro"
			android:layout_marginTop="10dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:layout_width="120dp"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:textColor="#000000"
					android:text="Fecha de la Devolucion:  "/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="23sp"
					android:textColor="#000000"
					android:id="@+id/fad"
					android:layout_gravity="bottom"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="30dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="23sp"
			android:textColor="#000000"
			android:text="Dias de demora: "/>

		<TextView
			android:layout_width="wrap_content"
			android:textSize="23sp"
			android:textColor="#000000"
			android:layout_height="wrap_content"
			android:id="@+id/dd1"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_marginTop="30dp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="32sp"
			android:text="Multa"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="23sp"
			android:textColor="#000000"
			android:padding="20dp"
			android:id="@+id/multa"
			android:background="@drawable/carddentro"
			android:layout_marginTop="10dp"/>

	</LinearLayout>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/boton"
		android:text="Pagar Multa"
		android:layout_marginTop="35dp"
		android:padding="16dp"
		android:textColor="#FFFFFF"
		android:layout_marginBottom="25dp"
		android:id="@+id/dd"/>

</LinearLayout>

